@using MinhaCarteiraRazor.Core.Entities
@model Carteira

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Nome</h3>
    </div>
    <div class="panel-body">
        <span>Código: @Model.Id</span>
        <span> Nome: @Model.Nome</span>
        <span> Papéis: @Model.Nome</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-carteiraId="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-carteiraId="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>

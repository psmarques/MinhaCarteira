@page
@model RegisterModel
@{
}

<h2>Registrar</h2>

<div class="center-block">
    <form method="post">
        <div class="form-group">
            <i class="glyphicon glyphicon-user"></i>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Nome" asp-for="Nome">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="form-group">
            <input type="email" class="form-control" placeholder="E-mail" asp-for="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Entrar">
    </form>

</div>
@page
@model MinhaCarteiraRazor.Pages.Operacoes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form>

    <input type="hidden" asp-for="Operacao.Id" />

    <div class="form-group">
        <label asp-for="Operacao.Tipo"></label>
        <select class="form-control" asp-for="Operacao.Tipo" 
                                     asp-items="Model.OperacaoTipos" />
    </div>

    <div class="form-group">
        <label asp-for="Operacao.Papel"></label>
        <input asp-for="Operacao.Papel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Operacao.PrecoEntrada"></label>
        <input asp-for="Operacao.PrecoEntrada" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Operacao.PrecoStop"></label>
        <input asp-for="Operacao.PrecoStop" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Operacao.PrecoGain"></label>
        <input asp-for="Operacao.PrecoGain" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>

</form>

<a asp-page="./List" class="btn btn-default">Voltar</a>